<?xml version="1.0" encoding="UTF-8"?>
<sequence name="RetrieveDataSequence" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <call>
        <endpoint>
            <http method="get" uri-template="$SYSTEM:PMS_BE">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <log level="full">
        <property name="RESPOND" value="SUCCESS!!"/>
        <property name="PMS message" value="PMS!!"/>
    </log>
    <validate cache-schema="false" source="json-eval($)">
        <schema key="gov:custom/walkin-reservation-schema.json"/>
        <on-fail>
            <payloadFactory media-type="json">
                <format>{"Error":"$1",
            "Error Details" : "$2"       }</format>
                <args>
                    <arg evaluator="xml" expression="$ctx:ERROR_MESSAGE"/>
                    <arg evaluator="xml" expression="$ctx:ERROR_DETAIL"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="500"/>
            <drop/>
        </on-fail>
    </validate>
    <datamapper config="gov:datamapper/WalkinMapping.dmc" description="Map to canonical" inputSchema="gov:datamapper/WalkinMapping_inputSchema.json" inputType="JSON" outputSchema="gov:datamapper/WalkinMapping_outputSchema.json" outputType="JSON" xsltStyleSheet="gov:datamapper/WalkinMapping_xsltStyleSheet.xml"/>
    <payloadFactory media-type="json">
        <format>$1</format>
        <args>
            <arg evaluator="json" expression="$.reservation"/>
        </args>
    </payloadFactory>
    <log>
        <property name="RESPOND" value="SUCCESS!!"/>
    </log>
    <drop/>
</sequence>
